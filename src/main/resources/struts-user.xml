<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<!-- @ReulstPath is only apply to the class level. To apply it globally, you can configure it in the struts.xml file -->
	<constant name="struts.convention.result.path" value="/" />

	<package name="default" namespace="/user" extends="struts-default">
		<action name="login">
			<result>login.jsp</result>
		</action>

		<action name="welcome" class="com.kyu.user.action.UserAction">
			<result name="SUCCESS">welcome_user.jsp</result>
		</action>
	</package>

</struts>